flowchart TD
    subgraph LP["LOW PRESSURE (LP) PRESSOSTAAT"]
        LP_Start["START (CUT IN)<br/>────────────<br/>Compressor starts"]
        LP_Diff["DIFF (Differential)<br/>────────────<br/>Pressure difference"]
        LP_Stop["STOP (CUT OFF)<br/>────────────<br/>Compressor stops"]
        
        LP_Start -->|"Pressure RISES<br/>by DIFF"| LP_Stop
        LP_Stop -->|"Pressure FALLS<br/>to START"| LP_Start
        
        LP_Scale["RANGES (LP)<br/>────────────<br/>CUT IN:<br/>0.7 - 7.5 bar<br/>10 - 107 psi<br/><br/>DIFF:<br/>0.35 - 7.5 bar<br/>5 - 107 psi"]
    end
    
    subgraph HP["HIGH PRESSURE (HP) PRESSOSTAAT"]
        HP_Stop["STOP (CUT OUT)<br/>────────────<br/>Compressor stops<br/>(Safety)"]
        HP_Diff["DIFF (Differential)<br/>────────────<br/>Pressure difference"]
        HP_Start["START (CUT IN)<br/>────────────<br/>Compressor restarts"]
        
        HP_Stop -->|"Pressure FALLS<br/>by DIFF"| HP_Start
        HP_Start -->|"Pressure RISES<br/>to STOP"| HP_Stop
        
        HP_Scale["RANGES (HP)<br/>────────────<br/>CUT OUT:<br/>7 - 28 bar<br/>100 - 437 psi<br/><br/>DIFF:<br/>6 - 14 bar<br/>30 - 80 psi"]
    end
    
    System["SYSTEEM<br/>────────────<br/>Normal Operation"]
    
    System -.->|"Te lage<br/>zuigdruk"| LP
    System -.->|"Te hoge<br/>persdruk"| HP
    
    LP_Logic["LP LOGIC<br/>────────────<br/>Compressor ON when:<br/>P ≥ START<br/><br/>Compressor OFF when:<br/>P ≤ (START - DIFF)"]
    
    HP_Logic["HP LOGIC<br/>────────────<br/>Compressor OFF when:<br/>P ≥ STOP (safety!)<br/><br/>Compressor ON when:<br/>P ≤ (STOP - DIFF)"]
    
